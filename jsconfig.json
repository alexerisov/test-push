{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~public/*": ["public/*"],
      "~types/*": ["types/*"],
      "~src/*": ["src/*"],
      "~styles/*": ["src/styles/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
