{
  "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-prettier"
  ],
  "customSyntax": "postcss-scss",
  "plugins": [
      "stylelint-scss",
      "stylelint-prettier"
  ],
  "rules": {
    "indentation": 4,
    "string-quotes": "single",
    "selector-type-case": "lower",
    "selector-class-pattern": "[a-z][a-z_]*",
    "selector-id-pattern": null,
    "no-empty-source": null
  },
  "overrides": [
    {
      "files": [
          "*.scss",
          "**/*.scss"
      ],
      "customSyntax": "postcss-scss"
    }
  ]
}